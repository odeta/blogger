<h1>All Articles</h1>

<%= link_to "Search by tag >>", tags_path %><br /><br />

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article), class: 'article_title' %>
    </li>
  <% end %>
</ul>

<%= link_to "Create an article", new_article_path, class: 'new_article' %>
